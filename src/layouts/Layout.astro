---
import "../styles/global.css";
import { Toaster } from "@/components/ui/sonner";
import AuthControls from "@/components/AuthControls";

interface Props {
  title?: string;
}

const { title = "10xCards" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <header class="w-full border-b border-border p-4">
      <nav class="max-w-5xl mx-auto flex items-center justify-between">
        <a href="/" class="text-lg font-semibold">10xCards</a>
        <AuthControls client:only="react" />
      </nav>
    </header>
    <slot />
    <Toaster richColors closeButton client:only="react" />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
