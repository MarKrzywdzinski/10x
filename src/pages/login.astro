---
export const prerender = false;
import Layout from "@/layouts/Layout.astro";
import { LoginForm } from "@/components/LoginForm";
---

<Layout title="Logowanie - 10xCards">
  <main
    class="max-w-md mx-auto py-12 px-6 bg-white/70 dark:bg-neutral-900/70 rounded-3xl shadow-2xl backdrop-blur-md border border-neutral-200 dark:border-neutral-800 mt-10"
  >
    <h1 class="text-3xl font-extrabold mb-8 text-center tracking-tight text-neutral-900 dark:text-white drop-shadow-lg">
      Zaloguj się
    </h1>
    <LoginForm client:load />
    <p class="mt-4 text-sm text-center">
      Nie masz konta? <a href="/register" class="text-blue-600 dark:text-blue-400 hover:underline">Zarejestruj się</a>
    </p>
  </main>
</Layout>
